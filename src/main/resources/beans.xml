<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"


        default-init-method="init"
        default-destroy-method="destroy"
>
    <!--     아래처럼 직접 지정하지 않고 위 코드처럼 기본 초기화, 소멸 작업을 등록해 진행 가능.-->

    <bean id="englishGreeter" class="com.nhnacademy.edu.springframework.greeting.service.EnglishGreeter"
        scope="singleton"
        init-method="init"
        destroy-method="destroy">
    </bean>
    <bean id="koreanGreeter" class="com.nhnacademy.edu.springframework.greeting.service.KoreanGreeter"
        scope="prototype"
        init-method="init"
        destroy-method="destroy">
    </bean>

    <bean id="emailMessageSender" class="com.nhnacademy.edu.springframework.messagesender.service.EmailMessageSender"
        scope="singleton"
        init-method="init"
        destroy-method="destroy">
    </bean>
    <bean id="smsMessageSender" class="com.nhnacademy.edu.springframework.messagesender.service.SmsMessageSender"
        scope="prototype"
        init-method="init"
        destroy-method="destroy">
    </bean>


</beans>